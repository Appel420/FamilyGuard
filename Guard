  <script>
    // Permission guard â€” no ask, no give
    const guardedProps = [
      'getUserMedia', 'mediaDevices', 'geolocation',
      'requestPermission', 'getCurrentPosition', 'watchPosition'
    ];

    const permissionGuard = new Proxy(navigator, {
      get(target, prop) {
        if (guardedProps.includes(prop)) {
          console.warn(`Blocked permission request: navigator.${prop}`);
          return () => Promise.reject(new Error('Permission denied'));
        }
        return Reflect.get(target, prop);
      }
    });

    // Apply guard globally
    Object.defineProperty(window, 'navigator', {
      value: permissionGuard,
      writable: false,
      configurable: false
    });

    // For any iframe trying direct access
    const iframePermissionGuard = () => {
      setTimeout(() => {
        document.querySelectorAll('iframe').forEach(ifr => {
          try {
            const win = ifr.contentWindow;
            if (win) {
              Object.defineProperty(win, 'navigator', {
                value: permissionGuard,
                writable: false
              });
            }
          } catch(e) {} // cross-origin expected
        });
      }, 500);
    };

    // ... (rest of sovereign code: role, memory, timeline, companion, watch handling)

    const createProtectedIframe = (src) => {
      const container = document.createElement('div');
      container.className = 'video-container';
      const iframe = document.createElement('iframe');
      iframe.src = src;
      iframe.allowFullscreen = true;
      iframe.sandbox = 'allow-scripts allow-same-origin';
      iframe.referrerPolicy = 'no-referrer';
      iframe.loading = 'lazy';

      // Cookie + tracker eater
      iframe.onload = () => {
        setInterval(() => {
          try {
            const doc = iframe.contentDocument;
            if (!doc) return;
            doc.cookie.split(";").forEach(c => {
              const name = c.split("=")[0].trim();
              doc.cookie = `${name}=; expires=Thu, 01 Jan 1970 00:00:00 GMT; path=/; domain=.${doc.domain}`;
            });
            doc.querySelectorAll('script[src*="analytics"], script[src*="ads"], img[src*="tracker"]').forEach(el => el.remove());
          } catch {} 
        }, 500);

        iframePermissionGuard();
      };

      container.appendChild(iframe);
      return container;
    };

    // In handleWatch() â€” after iframe created
    // iframePermissionGuard(); already called in onload

    // ... rest unchanged
  </script>
</body>
</html>
```

