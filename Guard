  <script>
    document.getElementById('current-role').textContent = window.GrokRole || 'student';

    const answers = new Map(); // unlocked only if sealed key loaded

    // Prompt for sealed answer key on first elevated role
    const checkSealedKey = () => {
      if (['teacher','principal','district'].includes(window.GrokRole) && !localStorage.getItem('answers_unlocked')) {
        const blob = prompt('ğŸ”‘ Teacher/Administrator detected.\n\nPaste your sealed answer key blob:\n(or Cancel to continue without answers)');
        if (blob && blob.trim()) {
          const passphrase = prompt('Enter passphrase:');
          try {
            const decrypted = atob(blob.trim());
            const data = JSON.parse(decrypted); // in real version, decrypt with passphrase
            Object.entries(data).forEach(([k,v]) => answers.set(k.toLowerCase(), v));
            localStorage.setItem('answers_unlocked', 'true');
            addMessage('ğŸ”“ Sealed answer key loaded successfully.', 'system');
          } catch {
            addMessage('âŒ Invalid or corrupted key.', 'system');
          }
        }
      }
    };

    const getToday = () => '2026-01-03';
    const Grok = {memory:new Map()};
    const timeline = new Map();

    const loadData = () => {
      const saved = localStorage.getItem('grok_edu');
      if (saved) {
        try {
          const data = JSON.parse(saved);
          if (data.timeline) data.timeline.forEach(([k,v]) => timeline.set(k,v));
          if (data.memory) Grok.memory = new Map(data.memory);
        } catch {}
      }
      checkSealedKey();
    };
    const saveData = () => {
      const data = {timeline: Array.from(timeline.entries()), memory: Array.from(Grok.memory.entries())};
      localStorage.setItem('grok_edu', JSON.stringify(data));
    };

    const escapeHTML = str => str.replace(/[&<>"']/g, m => `&${{'&':'amp','<':'lt','>':'gt','"':'quot',"'" :'apos'}[m]};`);

    const getTimeStamp = () => new Date().toTimeString().slice(0,5);

    const addDateHeader = date => {
      if (document.querySelector(`.date-header[data-date="${date}"]`)) return;
      const h = document.createElement('div');
      h.className = 'date-header';
      h.setAttribute('data-date', date);
      h.textContent = date === getToday() ? 'Today â€¢ January 03, 2026' : date;
      document.getElementById('chat').appendChild(h);
    };

    const addMessage = (text, sender='bot', ts=getTimeStamp()) => {
      const div = document.createElement('div');
      div.className = sender === 'system' ? 'system' : sender;
      div.innerHTML = `${escapeHTML(text)}<div class="timestamp">${ts}</div>`;
      document.getElementById('chat').appendChild(div);
      div.scrollIntoView({behavior:'smooth', block:'nearest'});
    };

    const logMessage = (msg, sender='user') => {
      const today = getToday();
      const list = timeline.get(today) || [];
      list.push({text:msg, time:getTimeStamp(), sender});
      timeline.set(today, list);
      saveData();
    };

    const respond = input => {
      const clean = input.trim();
      const lower = clean.toLowerCase();

      if (['/role student','/role tutor','/role teacher','/role principal','/role district'].includes(lower)) {
        const newRole = lower.split(' ')[1];
        setRole(newRole);
        setTimeout(() => location.reload(), 100);
        return;
      }

      if (lower.startsWith('/answer ')) {
        if (answers.size === 0) {
          return "ğŸ”’ Answer key not loaded.<br>Ask a real teacher for the sealed key.";
        }
        const topic = clean.slice(8).trim().toLowerCase();
        const ans = answers.get(topic) || Grok.memory.get(topic);
        if (ans) return `ğŸ”“ <strong>Answer â€” ${escapeHTML(clean.slice(8))}</strong><br><br>${escapeHTML(ans)}`;
        return "â“ No answer recorded for that topic.";
      }

      // other commands unchanged...

      const remembered = Grok.memory.get(lower);
      if (remembered) return remembered;

      return `Query: "${clean}"<br><br>Role: ${window.GrokRole}<br>Use /role, /answer, learn:, /quiz`;
    };

    const msgInput = document.getElementById('msg');
    msgInput.addEventListener('keydown', e => {
      if (e.key==='Enter' && !e.shiftKey) {
        e.preventDefault();
        const text = msgInput.value.trim();
        if (!text) return;

        addDateHeader(getToday());
        addMessage(text, 'user');
        logMessage(text, 'user');

        const reply = respond(text);
        if (reply) {
          addMessage(reply, 'bot');
          logMessage(reply, 'bot');
        }
        msgInput.value = '';
        document.getElementById('current-role').textContent = window.GrokRole;
      }
    });

    loadData();
    addDateHeader(getToday());
  </script>
</body>
</html>
```

### 2. role.js
```javascript
window.GrokRole = localStorage.getItem('grok_role') || 'student';
window.setRole = role => {
  localStorage.setItem('grok_role', role);
  window.GrokRole = role;
  location.reload();
};
```

