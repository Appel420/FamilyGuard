    // Seed from previous mechanisms (quizzes, answer keys, voice notes, files)
    // Example auto-seeding on learn/quiz/answer
    const oldLearn = (q, a) => { remember(q, a, 'teacher_key'); };

    // Report compiler â€” your knowledge, cited
    const compileReport = (topic) => {
      const lower = topic.toLowerCase();
      let report = `<strong>Report: ${escapeHTML(topic)}</strong><br><br>`;
      let found = 0;

      for (const [k, v] of knowledge) {
        if (k.includes(lower) || lower.includes(k)) {
          found++;
          report += `â€¢ <strong>${escapeHTML(v.ans)}</strong><br>`;
          report += `  â†³ Source: ${v.src}`;
          if (v.ref) report += ` â€” ${escapeHTML(v.ref)}`;
          report += `<br>  â†³ Learned: ${v.ts}<br><br>`;
        }
      }

      if (found === 0) {
        report += `No direct knowledge yet on â€œ${escapeHTML(topic)}â€.<br><br>`;
        report += `Teach me with: learn: ${escapeHTML(topic)} â†’ [your answer]`;
      } else {
        report += `<em>Compiled from ${found} piece(s) of your own learning.</em>`;
      }

      return report;
    };

    const respond = (input) => {
      const clean = input.trim();
      const lower = clean.toLowerCase();

      // Report command
      if (lower.startsWith('write a report') || lower.startsWith('report on')) {
        const topic = clean.replace(/write a report on|write a report|report on|report/gi, '').trim();
        if (topic) return compileReport(topic);
        return "Tell me the topic: â€œWrite a report on the skyâ€";
      }

      // Simple recall â€” best effort stem match
      for (const [k, v] of knowledge) {
        if (k.includes(lower) || lower.includes(k)) {
          return `${escapeHTML(v.ans)}<br><br><em>â€” You learned this ${v.src} at ${v.ts}</em>`;
        }
      }

      // Fallback
      return `I don't recall that yet.<br><br>Teach me: learn: ${escapeHTML(clean)} â†’ [answer]`;
    };

    // Hook into existing learn/quiz/answer to auto-remember
    // Example override snippet
    const originalLearn = (q, a) => {
      remember(q.toLowerCase(), a, 'teacher_key');
    };

    // ... rest of sovereign code (roles, watch, permissions, etc.)

    const msgInput = document.getElementById('msg');
    msgInput.addEventListener('keydown', e => {
      if (e.key==='Enter' && !e.shiftKey) {
        e.preventDefault();
        const text = msgInput.value.trim();
        if (!text) return;

        addMessage(text, 'user');
        logMessage(text, 'user');

        const reply = respond(text);
        addMessage(reply, 'bot');
        logMessage(reply, 'bot');

        msgInput.value = '';
      }
    });

    // Demo seed
    remember('sky blue', 'Rayleigh scattering â€” shorter blue wavelengths scatter more', 'physics_book', 'Ch.4 p.112');
    remember('pi', '3.141592653589793', 'teacher_key');
    remember('photosynthesis', '6COâ‚‚ + 6Hâ‚‚O + light â†’ Câ‚†Hâ‚â‚‚Oâ‚† + 6Oâ‚‚', 'quiz', 'score 9/10');

    loadData();
    addDateHeader(getToday());
  </script>
</body>
</html>
```

